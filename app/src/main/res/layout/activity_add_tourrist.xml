<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tvNamListTourist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Tour Rist"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="@android:color/holo_blue_bright"/>
    <EditText
        android:id="@+id/edtAddTourist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add tourist "
        android:inputType="text"
        android:layout_below="@+id/tvNamListTourist"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        android:layout_below="@+id/tvNamListTourist"
        android:layout_alignRight="@+id/edtAddTourist"
        android:id="@+id/btnAdd"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvListTourist"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edtAddTourist"
        android:layout_gravity="center_horizontal">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>