<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_default"
    android:paddingBottom="@dimen/menu_header_padding_left_bottom"
    android:paddingLeft="@dimen/menu_header_padding_left_right"
    android:paddingRight="@dimen/menu_header_padding_left_right"
    android:paddingTop="@dimen/rl_register_header_height"
    >
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_user"
        />
    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textview.text.username.login"
        android:text="Than"
        android:layout_toRightOf="@+id/imgAvatar"
        android:layout_marginLeft="@dimen/textview.username.login.margin.left"
        android:textColor="@color/textview.text.title.register"
        android:layout_marginTop="@dimen/textview_user_contact_margin_top"

        />

</RelativeLayout>